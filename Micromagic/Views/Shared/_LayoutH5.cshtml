<!DOCTYPE html>
@{ string PName = "慢生活", PKeys = "近景魔术", PNotes = "近景魔术"; }
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <link rel="shortcut icon" href="~/Content/Common/img/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" href="~/Content/Common/img/favicon.ico">
    <link rel="canonical" href="http://www.magic.com">
    <meta name="keywords" content="@PKeys" />
    <meta name="description" content="@PNotes" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/H5/Styles/Views")
    @RenderSection("styles", required: false)
</head>
<body ng-app="app">
    <header class="ui-nav-top" ng-controller="HeaderController">
    </header>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer class="ui-nav-bottom" ng-controller="FooterController">
        <p>&copy; @DateTime.Now.Year - 慢时间</p>
    </footer>
    <div>
        @Scripts.Render("~/H5/Scripts/Views")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
