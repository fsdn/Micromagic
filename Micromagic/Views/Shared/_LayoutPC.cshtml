<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/Content/Images/Common/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon-precomposed" href="~/Content/Images/Common/favicon.ico">
    <meta name="keywords" content="近景魔术" />
    <meta name="description" content="近景魔术。" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/PC/Styles/Views")
    @RenderSection("styles", required: false)
</head>
<body ng-app="app">
    <header class="navbar navbar-inverse navbar-fixed-top ui-nav-top" ng-controller="HeaderController">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" ng-href="{{navs.brand.url}}" ng-bind="navs.brand.text"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ui-nav-list">
                    <li ng-class="{dropdown:item.list.length>0}" ng-repeat="item in navs.list" ng-hide="item.list.length==0">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span ng-bind="item.text"></span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu ui-nav-list-sub">
                            <li ng-repeat="sub in item.list">
                                <a ng-href="{{sub.url}}" ng-bind="sub.text"></a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="body-content @*ui-line-bottom*@">
        @RenderBody()
    </div>
    <footer class="ui-nav-bottom" ng-controller="FooterController">
        <div class="container">
            <div class="row">
                <div class="col-xs-12"></div>
            </div>
            <div class="row ui-line-top">
                <div class="col-xs-12">
                    <div class="ui-copy">
                        <span>&copy;</span>
                        <span ng-bind="navs.copy.copyYear"></span>
                        <span ng-bind="navs.copy.brand"></span>
                        <span ng-bind="navs.copy.copyright"></span>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <div>
        @Scripts.Render("~/PC/Scripts/Views")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
